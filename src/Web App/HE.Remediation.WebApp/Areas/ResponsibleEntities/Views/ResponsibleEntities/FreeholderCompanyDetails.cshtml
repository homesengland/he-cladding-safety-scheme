@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.ResponsibleEntities.FreeholderCompanyDetailsViewModel
@{
    ViewData["Title"] = "What are the company details of the freeholder?";
    ViewData["BackLink"] = Url.Action("FreeholderCompanyOrIndividual", "ResponsibleEntities", new { Area = "ResponsibleEntities" });
}
@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="CompanyName"/>
        <govuk-error-summary-item asp-for="CompanyRegistrationNumber"/>
        <govuk-error-summary-item asp-for="FirstName"/>
        <govuk-error-summary-item asp-for="LastName"/>
        <govuk-error-summary-item asp-for="EmailAddress"/>
        <govuk-error-summary-item asp-for="ContactNumber"/>
    </govuk-error-summary>
}
<h1 class="govuk-heading-xl">
    @ViewData["Title"]
</h1>

<p class="govuk-body">
    The Freeholder details are used to validate the building information with the Land Registry.
</p>

<form method="post" asp-area="ResponsibleEntities" asp-controller="ResponsibleEntities" asp-action="FreeholderCompanyDetails">


    <govuk-fieldset>
        <govuk-input asp-for="CompanyName" input-class="govuk-input--width-20">
            <govuk-input-label class="govuk-label--s">Company name</govuk-input-label>
        </govuk-input>
        <govuk-input asp-for="CompanyRegistrationNumber" input-class="govuk-input--width-20" input-maxlength="8">
            <govuk-input-label class="govuk-label--s">Company registration number</govuk-input-label>
        </govuk-input>

        <p class="govuk-body govuk-!-font-size-24 govuk-!-font-weight-bold">
            Primary contact details
        </p>

        <govuk-input asp-for="FirstName" input-class="govuk-input--width-20">
            <govuk-input-label class="govuk-label--s">First name</govuk-input-label>
        </govuk-input>
        <govuk-input asp-for="LastName" input-class="govuk-input--width-20">
            <govuk-input-label class="govuk-label--s">Last name</govuk-input-label>
        </govuk-input>
        <govuk-input asp-for="EmailAddress" input-class="govuk-input--width-20">
            <govuk-input-label class="govuk-label--s">Email address</govuk-input-label>
        </govuk-input>
        <govuk-input asp-for="ContactNumber" input-class="govuk-input--width-20" input-maxlength="20">
            <govuk-input-label class="govuk-label--s">Contact number</govuk-input-label>
        </govuk-input>
    </govuk-fieldset>

    <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />

    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="@(ESubmitAction.Continue)">Save and continue</govuk-button>
        <govuk-button name="SubmitAction" value="@(ESubmitAction.Exit)" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>
</form>