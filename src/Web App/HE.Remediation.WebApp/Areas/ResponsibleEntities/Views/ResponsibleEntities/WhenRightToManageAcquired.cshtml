@model HE.Remediation.WebApp.ViewModels.ResponsibleEntities.RightToManage.WhenRightToManageAcquiredViewModel

@{
    ViewData["BackLink"] = Url.Action("AcquiredRightToManage", "ResponsibleEntities", new { Area = "ResponsibleEntities" });
    ViewData["Title"] = "When was the Right to Manage acquired?";
}

@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="RightToManageAcquisitionDate"/>
    </govuk-error-summary>
}

<h1 class="govuk-heading-xl">@ViewData["Title"]</h1>

<form asp-area="ResponsibleEntities" asp-controller="ResponsibleEntities" asp-action="WhenRightToManageAcquired" method="post">
    
    <govuk-date-input asp-for="RightToManageAcquisitionDate">
        <govuk-date-input-label>Please submit the date of acquisition (the date that the Right to Manage took effect)</govuk-date-input-label>
        <govuk-date-input-hint>For example, 27 8 2022</govuk-date-input-hint>
    </govuk-date-input>
    
    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="Continue">Save and continue</govuk-button>
        <govuk-button name="SubmitAction" value="Exit" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>

</form>