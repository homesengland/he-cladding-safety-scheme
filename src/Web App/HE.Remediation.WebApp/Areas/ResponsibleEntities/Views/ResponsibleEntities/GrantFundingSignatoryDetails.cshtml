@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.ResponsibleEntities.GrantFundingSignatoryDetailsViewModel;
@{
    ViewData["Title"] = "Tell us who is responsible for signing the grant funding agreement";
    ViewData["BackLink"] = Url.Action("GrantFundingSignatories", "ResponsibleEntities", new { Area = "ResponsibleEntities" });
}
@section ErrorSummary
    {
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="FirstName" />
        <govuk-error-summary-item asp-for="LastName" />
        <govuk-error-summary-item asp-for="EmailAddress" />
        <govuk-error-summary-item asp-for="Role" />
    </govuk-error-summary>
}

<h1 class="govuk-heading-xl govuk-!-margin-bottom-5">@ViewData["Title"]</h1>

<form method="post" asp-area="ResponsibleEntities" asp-controller="ResponsibleEntities" asp-action="GrantFundingSignatoryDetails">
    <input asp-for="Id" type="hidden" value="@Model.Id" />

    <govuk-input asp-for="FirstName" input-class="govuk-input--width-20">
        <govuk-input-label is-page-heading="true" class="govuk-label--s">First Name</govuk-input-label>
    </govuk-input>

    <govuk-input asp-for="LastName" input-class="govuk-input--width-20">
        <govuk-input-label is-page-heading="true" class="govuk-label--s">Last Name</govuk-input-label>
    </govuk-input>

    <govuk-input asp-for="EmailAddress" input-class="govuk-input--width-20">
        <govuk-input-label is-page-heading="true" class="govuk-label--s">Email</govuk-input-label>
    </govuk-input>

    <govuk-input asp-for="Role" input-class="govuk-input--width-20">
        <govuk-input-label is-page-heading="true" class="govuk-label--s">Role</govuk-input-label>
    </govuk-input>

    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="@ESubmitAction.Continue">Save and continue</govuk-button>
        <govuk-button name="SubmitAction" value="@ESubmitAction.Exit" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>
</form>
