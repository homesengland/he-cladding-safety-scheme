@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.ResponsibleEntities.FreeholderCompanyOrIndividualViewModel
@{
    ViewData["Title"] = "Is the freeholder an individual or company?";
    ViewData["BackLink"] = Url.Action("ResponsibleEntityRelation", "ResponsibleEntities", new { Area = "ResponsibleEntities" });
}
@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="ReponsibleEntityType"/>
    </govuk-error-summary>
}
<form asp-area="ResponsibleEntities" asp-controller="ResponsibleEntities" asp-action="FreeholderCompanyOrIndividual" method="post">
    <govuk-radios asp-for="ReponsibleEntityType" name="ReponsibleEntityType">
        <govuk-radios-fieldset>
            <govuk-radios-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--xl">
                @ViewData["Title"]
            </govuk-radios-fieldset-legend>
        </govuk-radios-fieldset>

        <govuk-radios-item value="@(EResponsibleEntityType.Company)">Company</govuk-radios-item>
        <govuk-radios-item value="@(EResponsibleEntityType.Individual)">Individual</govuk-radios-item>
    </govuk-radios>

    <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />

    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="@ESubmitAction.Continue">Save and continue</govuk-button>
        <govuk-button name="SubmitAction" value="@ESubmitAction.Exit" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>
</form>