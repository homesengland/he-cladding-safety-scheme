@using GovUk.Frontend.AspNetCore.TagHelpers
@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.Location.PostCodeSelectionViewModel

@{
    ViewData["Title"] = "Provide building address";
    ViewData["Backlink"] = Model.NonResidentialUnits == true
        ? Url.Action("NonResidentialUnits", "BuildingDetails", new { Area = "BuildingDetails" })
        : Url.Action("ResidentialUnits", "BuildingDetails", new { Area = "BuildingDetails" });
    ViewData["FullWidth"] = false;

    ViewData["ReturnUrl"] = "CompanyAddress";
    ViewData["ReturnActionUrl"] = "ProvideBuildingAddress";
    ViewData["ReturnControllerUrl"] = @ViewContext.RouteData.Values["controller"].ToString();
}
@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="SelectedAddressId" />
    </govuk-error-summary>
}
<h1 class="govuk-heading-xl">
    Provide building address
</h1>
<form method="post" asp-area="BuildingDetails" asp-controller="BuildingDetails" asp-action="PostCodeItemSelected">
                
    <govuk-fieldset>
        <partial name="_PostCodeLookupResultsPartial" view-data="ViewData" />        
    </govuk-fieldset>

    @if (@Model.OutputLocations != null)
    {
        if (@Model.OutputLocations.Count > 0)
        {
            <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />
            <input asp-for="PostCode" type="hidden" value="@Model.PostCode" />

            <a href="@Url.Action("ProvideBuildingAddressManual", "BuildingDetails", new { area = "BuildingDetails", postCode=@Model.PostCode })" class="govuk-link" >I cannot find the address in this list</a>
            <div class="comp-btn-group">
                <govuk-button name="SubmitAction" value="@(ESubmitAction.Continue)">Select Address</govuk-button>
                <govuk-button name="SubmitAction" value="@(ESubmitAction.Exit)" class="govuk-button--secondary">Save and return later</govuk-button>        
            </div>    
        }            
    }
</form>    

