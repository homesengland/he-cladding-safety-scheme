@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.BuildingDetails.ResponsibleForTheRemediationViewModel
@{
    ViewData["Title"] = "Building developer information";
    ViewData["BackLink"] = !string.IsNullOrWhiteSpace(Model.ReturnUrl)
        ? Url.Action(Model.ReturnUrl, "BuildingDetails", new { Area = "BuildingDetails" })
        : Model.HasBsrCode == true
            ? Url.Action("BuildingSafetyRegulatorRegistrationCode", "BuildingDetails", new { Area = "BuildingDetails" })
            : Url.Action("BuildingHasSafetyRegulatorRegistrationCode", "BuildingDetails", new { Area = "BuildingDetails" });

    ViewData["FullWidth"] = false;
    
}
@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="BuildingRemediationResponsibilityType" />
    </govuk-error-summary>
}
<h1 class="govuk-heading-xl">Why are you responsible for the remediation of this building?</h1>

<form asp-area="BuildingDetails" asp-controller="BuildingDetails" asp-action="ResponsibleForTheRemediation" method="post">
    <govuk-radios asp-for="BuildingRemediationResponsibilityType">
        <govuk-radios-item value="@EBuildingRemediationResponsibilityType.YouBuiltTheBuilding">You built the building</govuk-radios-item>
        <govuk-radios-item value="@EBuildingRemediationResponsibilityType.RefurbishedinTheLast30Years">You refurbished the building in the last 30 years</govuk-radios-item>
    </govuk-radios>

    <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />

    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="@ESubmitAction.Continue">Save and continue</govuk-button>
        <govuk-button name="SubmitAction" value="@ESubmitAction.Exit" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>
</form>