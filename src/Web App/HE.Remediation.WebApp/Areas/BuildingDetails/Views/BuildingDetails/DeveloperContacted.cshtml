@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.BuildingDetails.DeveloperContactedViewModel
@{
    ViewData["Title"] = "Have you contacted the developer about remediation works on this building (addressing fire safety risks related to unsafe non-ACM cladding)?";
    ViewData["BackLink"] = Url.Action("DeveloperInBusiness", "BuildingDetails", new { Area = "BuildingDetails" });
    ViewData["FullWidth"] = false;
}
@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="HasDeveloperBeenContactedAboutRemediation"/>
    </govuk-error-summary>
}
<h1 class="govuk-heading-xl">Have you contacted the developer about remediation works on this building (addressing fire safety risks related to unsafe non-ACM cladding)?</h1>

<form asp-area="BuildingDetails" asp-controller="BuildingDetails" asp-action="DeveloperContacted">
    <govuk-radios asp-for="HasDeveloperBeenContactedAboutRemediation">
        <govuk-radios-hint>
            You do not need to have contacted the developer to register but we would like to know if you have or are going to contact them.
        </govuk-radios-hint>
        
        <govuk-radios-item value="@(true)">Yes</govuk-radios-item>
        <govuk-radios-item value="@(false)">No</govuk-radios-item>
    </govuk-radios>
    
    <div class="comp-btn-group">
    <govuk-button name="SubmitAction" value="@ESubmitAction.Continue">Save and continue</govuk-button>
    <govuk-button name="SubmitAction" value="@ESubmitAction.Exit" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>
</form>