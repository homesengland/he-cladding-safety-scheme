@using GovUk.Frontend.AspNetCore.TagHelpers
@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.BuildingDetails.NameOfDevelopmentViewModel
@{
    ViewData["Title"] = "What is the name of the development this building is part of ? ";
    ViewData["Backlink"] = Url.Action("BuildingPartOfDevelopment", "BuildingDetails", new { Area = "BuildingDetails" });
    ViewData["FullWidth"] = false;
}
@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="NameOfDevelopment" />
    </govuk-error-summary>
}
<form method="post" asp-area="BuildingDetails" asp-controller="BuildingDetails" asp-action="NameOfDevelopment">
    <govuk-input asp-for="NameOfDevelopment" input-class="govuk-input--width-20">
        <govuk-input-label is-page-heading="true" class="govuk-label--xl">
            What is the name of the development this building
            is part of?
        </govuk-input-label>
    </govuk-input>

    <div class="comp-btn-group">
    <govuk-button name="SubmitAction" value="@(ESubmitAction.Continue)">Save and continue</govuk-button>
    <govuk-button name="SubmitAction" value="@(ESubmitAction.Exit)" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>
</form>