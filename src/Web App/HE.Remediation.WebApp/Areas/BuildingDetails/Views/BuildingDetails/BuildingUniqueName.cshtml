@using GovUk.Frontend.AspNetCore.TagHelpers
@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.BuildingDetails.BuildingUniqueNameViewModel
@{
    ViewData["Title"] = "What name do you want to give the building?";
    ViewData["Backlink"] = Url.Action("WhatYoullNeed", "BuildingDetails", new { Area = "BuildingDetails" });
    ViewData["FullWidth"] = false;
}
@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="UniqueName" />
    </govuk-error-summary>
}

<form method="post" asp-area="BuildingDetails" asp-controller="BuildingDetails" asp-action="BuildingUniqueName">
    <govuk-input asp-for="UniqueName" input-class="govuk-input--width-20">
        <govuk-input-label is-page-heading="true" class="govuk-label--xl govuk-!-margin-bottom-8">What name do you want to give the building?</govuk-input-label>
        <govuk-input-hint>This can be the building's name or another name to help you identify it.</govuk-input-hint>
    </govuk-input>
    
    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="@(ESubmitAction.Continue)">Save and continue</govuk-button>
        <govuk-button name="SubmitAction" value="@(ESubmitAction.Exit)" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>
</form>
