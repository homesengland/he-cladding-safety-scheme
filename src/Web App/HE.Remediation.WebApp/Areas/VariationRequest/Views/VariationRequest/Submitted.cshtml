@using HE.Remediation.Core.Enums;
@model HE.Remediation.WebApp.ViewModels.VariationRequest.SubmittedViewModel
@{
    ViewData["Title"] = "Variation Request Submitted";
    ViewData["FullWidth"] = true;
    ViewData["BackLinkHidden"] = true;
    ViewData["ExitLinkHidden"] = true;
}

<div class="text-center">
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <govuk-panel heading-level="1">
                        <govuk-panel-title>
                            Your variation request has been successfully submitted
                        </govuk-panel-title>
                        <govuk-panel-body>
                            Variation Name<br /><strong>Variation @Model.VariationNumber</strong>
                        </govuk-panel-body>
                    </govuk-panel>

                    <h2 class="govuk-heading-m">What happens next</h2>

                    <p class="govuk-body">
                        Thank you for submitting your variation request.  We will contact you if we have any points of clarification and to confirm the outcome.
                    </p>
                    <govuk-button href=@Url.Action("Index", "StageDiagram", new { Area = "Application" })>Return to home</govuk-button>
                </div>
            </div>
        </main>
    </div>
</div>
