@using HE.Remediation.Core.Enums;
@model HE.Remediation.WebApp.ViewModels.ScheduleOfWorks.FundingInformationViewModel
@{
    ViewData["SubTitle"] = Model.BuildingName + " (" + Model.ApplicationReferenceNumber + ")";
    ViewData["BackLink"] = Url.Action("ProjectDates", "ScheduleOfWorks", new { Area = "ScheduleOfWorks" });
    ViewData["FullWidth"] = false;
}

<h1 class="govuk-heading-xl">Profile your schedule of works</h1>

<p class="govuk-body">
    You will need to provide a monthly cashflow for your eligible costs. 
    This should cover both the works and all associated fees for the project team that you submitted as part of your works package.
</p>

<p class="govuk-body">
    Your contractor and project team should be able to provide you with the information to complete the cashflow. 
    We appreciate timings can change, but this will give us important information about when you will complete your project and the likely timing of grant payments.
</p>

<form asp-area="ScheduleOfWorks" asp-controller="ScheduleOfWorks" asp-action="FundingInformation" method="post">

    <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />

    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="@ESubmitAction.Continue">Continue</govuk-button>
    </div>
</form>
