@using HE.Remediation.Core.Enums
@using HE.Remediation.Core.Extensions
@using HE.Remediation.WebApp.ViewModels.MonthlyProgressReporting
@model TaskListItemViewModel

<li class="app-task-list__item">
    @if (Model.Status == null)
    {
        <span class="govuk-body">@Model.Task</span>
        <strong class="govuk-tag app-task-list__tag govuk-tag--grey">Cannot Start Yet</strong>
    }
    else
    {
        if(Model.IsReportSubmitted)
        {
            <span class="app-task-list__task-name">
                @Model.Task
            </span>
        }
        else
        {
            <span class="app-task-list__task-name">
                <a class="govuk-link" href="@Model.TaskUrl" aria-describedby="list-convictions-status">
                    @Model.Task
                </a>
            </span>
        }

        <task-list-status-badge status="@Model.Status.Value"></task-list-status-badge>
    }
</li>