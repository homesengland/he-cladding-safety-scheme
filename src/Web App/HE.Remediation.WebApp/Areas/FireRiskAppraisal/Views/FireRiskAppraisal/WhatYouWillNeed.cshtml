@using HE.Remediation.Core.Enums
@using GovUk.Frontend.AspNetCore.TagHelpers
@model HE.Remediation.WebApp.ViewModels.FireRiskAppraisal.FireRiskAssessorDetailsViewModel
@{
    ViewData["Title"] = "What you'll need";
    ViewData["BackLink"] = Url.Action("Index", "TaskList", new { Area = "Application" });
    ViewData["FullWidth"] = true;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">@ViewData["Title"]</h1>
        @if (Model.ApplicationScheme == EApplicationScheme.ResponsibleActorsScheme)
        {
            <p class="govuk-body">
                Tell us if you have a completed Fire Risk Appraisal of External Walls (FRAEW).
                You will be asked to:
            </p>

            <ol class="govuk-list govuk-list--number govuk-!-padding-left-6">
                <li>Check if the assessor is on our list. If they're not listed, you can add their details.</li>
                <li>Upload the report and answer questions about the appraisal.</li>
                <li>Provide a FRAEW summary.</li>
            </ol>
        }
        else if (Model.ApplicationScheme == EApplicationScheme.SocialSector)
        {
            <p class="govuk-body">
                Before you submit your building record, you'll need to book a Fire Risk Appraisal of External Walls (FRAEW).
            </p>
            <p class="govuk-body">
                This is different to an External Wall System Fire Review Certificate (EWS 1).
            </p>
            <p class="govuk-body">
                To support your building record, you will need to upload both a FRAEW report and summary.
            </p>

            <h2 class="govuk-heading-m govuk-!-margin-bottom-0">If you do not have a FRAEW</h2>
            <ol class="govuk-list govuk-list--number govuk-!-padding-left-6">
                <li>Check our list of assessors and contact an assessor.</li>
                <li>Give the assessor your building record ID so they can add it to their report.</li>
                <li>Upload the report and answer the questions about the appraisal.</li>
            </ol>

            <h2 class="govuk-heading-m govuk-!-margin-bottom-0">If you already have a FRAEW</h2>
            <ol class="govuk-list govuk-list--number govuk-!-padding-left-6">
                <li>Check if the assessor is on our list. If they're not listed, you can add their details manually using the hyperlink.</li>
                <li>Upload the report and answer the questions about the appraisal.</li>
                <li>Provide a FRAEW summary.</li>
            </ol>
        }

        else
        {
            <p class="govuk-body">
                As a responsible entity, it's a legal requirement to have and maintain a Fire Risk Assessment (FRA) for your building.
            </p>
            <p class="govuk-body">
                Before you submit your application, you'll need to book a Fire Risk Appraisal of External Walls (FRAEW).
            </p>
            <p class="govuk-body">
                This is different to a External Wall Fire Review (ESW1)
            </p>
            <p class="govuk-body">
                To support your application you will need to upload a FRA and FRAEW report.
            </p>


            <h2 class="govuk-heading-m govuk-!-margin-bottom-0">If you do not have a FRAEW</h2>
            <ol class="govuk-list govuk-list--number govuk-!-padding-left-6">
                <li>Tell us if you have a completed fire risk appraisal.</li>
                <li>Check our list of assessors and contact an assessor.</li>
                <li>Give the assessor your application ID to add to their report.</li>
                <li>Upload the report and answer questions about the appraisal.</li>
            </ol>

            <h2 class="govuk-heading-m govuk-!-margin-bottom-0">If you have a FRAEW</h2>
            <ol class="govuk-list govuk-list--number govuk-!-padding-left-6">
                <li>Tell us if you have a completed fire risk appraisal.</li>
                <li>Check if the assessor is on our list. If they're not listed, you can add their details.</li>
                <li>Upload the report and answer questions about the appraisal.</li>
                <li>Provide a FRAEW summary.</li>
            </ol>
        }

        
        <govuk-button href="@Url.Action("CompletedAppraisal", "FireRiskAppraisal", new { Area = "FireRiskAppraisal" })">Continue</govuk-button>

    </div>
</div>