@using HE.Remediation.Core.Enums;
@model HE.Remediation.WebApp.ViewModels.WorksPackage.WorkPackageCostsScheduling.StartInformationViewModel
@{
    Layout = "~/Areas/WorksPackage/Views/Shared/_SideCardLayout.cshtml";
    
    ViewData["Title"] = "Third party contributions - About this section";
    ViewData["SubTitle"] = Model.BuildingName + " (" + Model.ApplicationReferenceNumber + ")";
    ViewData["Backlink"] = Url.Action("TaskList", "WorkPackage", new { Area = "WorksPackage" });
    ViewData["FullWidth"] = true;
}

<h1 class="govuk-heading-xl">About this section</h1>

<p class="govuk-body">
    In the following section we'll ask you about third party contributions for your works.
</p>
<p class="govuk-body">
    Any financial contributions from third parties are recorded in this section and should not be deducted from your costs.
</p>
<p class="govuk-body">
    Please ensure the costs outlined in the previous section cover 100% of your costs, 
    including those already covered by your PTS payment if you have had one.
</p>

<form asp-area="WorksPackageThirdPartyContributions" asp-controller="ThirdPartyContributions" asp-action="StartInformation" method="post">

    <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl"/>

    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="@ESubmitAction.Continue">Continue</govuk-button>
    </div>
</form>
