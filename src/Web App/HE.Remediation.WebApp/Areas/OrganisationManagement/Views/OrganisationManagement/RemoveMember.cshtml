@using HE.Remediation.Core.Extensions
@using HE.Remediation.WebApp.TagHelpers
@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.OrganisationManagement.RemoveMemberViewModel
@{
    Layout = "~/Areas/OrganisationManagement/Views/Shared/_SideCardLayout.cshtml";
    ViewData["Title"] = "Remove Member";
}

@section BackButton
{
    <govuk-back-link href="/OrganisationManagement/Users">Back</govuk-back-link>
}

<span class="govuk-caption-xl">Organisation management</span>
<h1 class="govuk-heading-xl">Remove access for @Model.FullName</h1>

<form method="post" asp-area="OrganisationManagement" asp-controller="OrganisationManagement" asp-action="RemoveMember">
    
    <div class="govuk-warning-text">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
            <span class="govuk-visually-hidden">Warning</span>
            Once access has been removed applications assigned to this organisation will no longer be visible to this account.
        </strong>
    </div>
	<input asp-for="Id" type="hidden" value="@Model.Id" />
	<input asp-for="CollaborationOrganisationId" type="hidden" value="@Model.CollaborationOrganisationId" />
    <govuk-button class="govuk-button govuk-button--warning" name="SubmitAction" value="@ESubmitAction.Continue">Remove access</govuk-button>
    <div>
        <a class="govuk-link" href="@Url.Action("Users", "OrganisationManagement")">Cancel and exit</a>
    </div>
</form>
