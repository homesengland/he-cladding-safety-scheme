@using HE.Remediation.Core.Enums
@{
    Layout = "~/Areas/ClosingReport/Views/Shared/_SideCardLayout.cshtml";
    ViewData["Title"] = "Communication with Leaseholders";
    ViewData["BackLink"] = Url.Action("TaskList", "ClosingReport", new { Area = "ClosingReport" });
    ViewData["FullWidth"] = true;
}

@section InfoCardSection
{
    <div class="info-card blank-background govuk-!-padding-left-0 govuk-!-padding-right-0 govuk-!-padding-top-1">
        <h2 class="govuk-heading-m">In this section</h2>

        <a target="_blank" href="https://forms.office.com/Pages/ResponsePage.aspx?id=aeKo-hEIOEWC500pAJIZv70AqgXWPftOscH1n6LMtXVUNDFVNVpMVTg4N0FOVzJMQzBDQlg5WDVXNC4u" class="govuk-link govuk-!-margin-bottom-2">
            Leaseholder and residents’ survey
        </a>

        <a target="_blank" href="https://www.gov.uk/government/publications/cladding-safety-scheme/applying-for-funding-for-the-cladding-safety-scheme#practical-completion--scheme-exit" class="govuk-link govuk-!-margin-bottom-2">
            Guidance
        </a>
    </div>
}

<h1 class="govuk-heading-xl govuk-!-margin-bottom-6">About this section</h1>

<p class="govuk-body">
    In this section we will ask you to upload evidence of your communication with leaseholders and residents to inform them that the project is complete.
</p>

<p class="govuk-body">
    This evidence:
    <ul class="govuk-list govuk-list--bullet">
        <li>must not contain any personal information</li>
        <li>must show that the link to the leaseholder and residents’ survey has been provided</li>
        <li>
            can be a redacted copy, template or screenshot example of the communication that was sent
        </li>
    </ul>
</p>

<p class="govuk-body">
    You do not need to upload every individual communication.
</p>

<p class="govuk-body">
    For further information please refer to the guidance.
</p>

@using (Html.BeginForm())
{
   <govuk-button name="SubmitAction" value="Continue">Continue</govuk-button>
}