@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <govuk-back-link href="@Url.Action("Index", "StageDiagram", new { Area = "Application" })">Back</govuk-back-link>


        <main class="govuk-main-wrapper">
            @await RenderSectionAsync("ErrorSummary", false)
            <span class="govuk-caption-xl">@ViewData["Title"]</span>
            <span class="govuk-caption-m">@ViewData["SubTitle"]</span> <br />

            @RenderBody()
            <div>
                <a class="govuk-link" href="@Url.Action("Index", "StageDiagram", new { Area = "Application" })">Exit</a>
            </div>
        </main>
    </div>
</div>