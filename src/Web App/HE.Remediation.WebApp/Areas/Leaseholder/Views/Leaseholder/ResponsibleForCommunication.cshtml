@using GovUk.Frontend.AspNetCore.TagHelpers
@using HE.Remediation.Core.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model  HE.Remediation.WebApp.ViewModels.Leaseholder.LeaseHolderResponsibleForCommunicationViewModel
@{
    ViewData["Title"] = "Are you responsible for communication to leaseholders and residents?";
    ViewData["BackLink"] = Url.Action("Evidence", "Leaseholder", new { Area = "Leaseholder" });
}

@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="ResponsibleForCommunication" />
    </govuk-error-summary>
}

<h1 class="govuk-heading-xl">
    Are you responsible for communication to leaseholders and residents?
</h1>

<form asp-area="Leaseholder" asp-controller="Leaseholder" asp-action="ResponsibleForCommunication" method="post">
    <govuk-radios asp-for="ResponsibleForCommunication">
        <govuk-radios-item value="@(ENoYes.Yes)">Yes</govuk-radios-item>
        <govuk-radios-item value="@(ENoYes.No)">No</govuk-radios-item>
    </govuk-radios>

    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="@(ESubmitAction.Continue)">Save and continue</govuk-button>
        <govuk-button name="SubmitAction" value="@(ESubmitAction.Exit)" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>
</form>