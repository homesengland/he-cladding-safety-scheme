@using GovUk.Frontend.AspNetCore.TagHelpers
@using HE.Remediation.Core.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model HE.Remediation.WebApp.ViewModels.Leaseholder.LeaseHolderCommunicationPartyDetailsViewModel
@{
    ViewData["Title"] = "Please provide your company details";
    ViewData["BackLink"] = Url.Action("ResponsibleForCommunicationType", "Leaseholder", new { Area = "Leaseholder" });
}

@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="CompanyName" />
    </govuk-error-summary>
}
<h1 class="govuk-heading-xl">Responsible party details</h1>
<p class="govuk-body">Please provide details of the person and/ or company that is responsible for communication to leaseholders and residents:</p>
<form method="post" asp-area="Leaseholder" asp-controller="Leaseholder" asp-action="CommunicationPartyDetails">

    <govuk-input asp-for="ContactName" name="ContactName" input-class="govuk-input--width-20" inputmode="text" spellcheck="false">
        <govuk-input-label is-page-heading="false" class="govuk-label--s">Contact name (if known)</govuk-input-label>
    </govuk-input>
    <govuk-input asp-for="CompanyName" name="CompanyName" input-class="govuk-input--width-20" inputmode="text" spellcheck="false">
        <govuk-input-label is-page-heading="false" class="govuk-label--s">Company name</govuk-input-label>
    </govuk-input>
    <govuk-input asp-for="EmailAddress" name="EmailAddress" input-class="govuk-input--width-20" inputmode="text" spellcheck="false">
        <govuk-input-label is-page-heading="false" class="govuk-label--s">Email Address</govuk-input-label>
    </govuk-input>
    <govuk-input asp-for="ContactNumber" name="ContactNumber" input-class="govuk-input--width-20" inputmode="text" spellcheck="false">
        <govuk-input-label is-page-heading="false" class="govuk-label--s">Contact Number</govuk-input-label>
    </govuk-input>


    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="@ESubmitAction.Continue">Save and continue</govuk-button>
        <govuk-button name="SubmitAction" value="@ESubmitAction.Exit" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>
</form>