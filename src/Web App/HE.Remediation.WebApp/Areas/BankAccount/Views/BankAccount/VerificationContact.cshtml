@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.BankAccount.VerificationContactViewModel
@{
    ViewData["BackLink"] = Model.BankDetailsRelationship == EBankDetailsRelationship.ResponsibleEntityAccount
        ? Url.Action("BankAccountDetailsResponsibleEntity", "BankAccount", new { Area = "BankAccount" })
        : Url.Action("BankAccountDetailsRepresentative", "BankAccount", new { Area = "BankAccount" });

    ViewData["Title"] = "Bank account verification";
    ViewData["FullWidth"] = false;
}

<h1 class="govuk-heading-xl">@ViewData["Title"]</h1>

<p class="govuk-body">
    All bank account information provided to us is subject to an independent verification process which includes digital and telephone checks.
</p>
<p class="govuk-body">
    Please tell us the contact details of someone who can complete this verification on behalf of the Responsible Entity or Representative, as applicable.
</p>

<form asp-area="BankAccount" asp-controller="BankAccount" asp-action="VerificationContact" method="post">
    <govuk-input asp-for="ContactName" name="@nameof(Model.ContactName)" input-class="govuk-input--width-20" inputmode="text" spellcheck="false">
        <govuk-input-label is-page-heading="false" class="govuk-label--s">Contact Name</govuk-input-label>
    </govuk-input>
    
    <govuk-input asp-for="ContactNumber" name="@nameof(Model.ContactNumber)" input-class="govuk-input--width-20" inputmode="text" spellcheck="false">
        <govuk-input-label is-page-heading="false" class="govuk-label--s">Contact Number</govuk-input-label>
    </govuk-input>
    
    <govuk-button name="@nameof(Model.SubmitAction)" value="@ESubmitAction.Continue">Confirm and continue</govuk-button>
</form>
