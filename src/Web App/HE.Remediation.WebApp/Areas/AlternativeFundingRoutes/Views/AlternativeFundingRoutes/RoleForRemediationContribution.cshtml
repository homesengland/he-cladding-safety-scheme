@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.AlternativeFundingRoutes.RoleForRemediationContributionViewModel

@{
    ViewData["Title"] = "In relation to this building, what is the role of the party that you have pursued, are pursuing or plan to pursue for a remediation contribution?";
    ViewData["BackLink"] = !Model.VisitedCheckYourAnswers
        ? Url.Action("CostRecovery", "AlternativeFundingRoutes", new { Area = "AlternativeFundingRoutes" })
        : Url.Action("CheckYourAnswers", "AlternativeFundingRoutes", new { Area = "AlternativeFundingRoutes" });
    ViewData["FullWidth"] = false;
}
@section ErrorSummary
{
    <govuk-error-summary>
        <govuk-error-summary-item asp-for="Roles" />
    </govuk-error-summary>
}
<h1 class="govuk-heading-xl">@ViewData["Title"]</h1>

<govuk-hint>Please select all that apply.</govuk-hint>

<form method="post" asp-area="AlternativeFundingRoutes" asp-controller="AlternativeFundingRoutes" asp-action="RoleForRemediationContribution">
    
    <govuk-checkboxes asp-for="Roles">
        <govuk-checkboxes-item value="@EPartyPursuedRole.Developers" checked="@Model.Roles.Contains(EPartyPursuedRole.Developers)">
            Developer(s)
        </govuk-checkboxes-item>
        <govuk-checkboxes-item value="@EPartyPursuedRole.ContractorsTraditionalBuildContract" checked="@Model.Roles.Contains(EPartyPursuedRole.ContractorsTraditionalBuildContract)">
            Contractor(s) - traditional build contract
        </govuk-checkboxes-item>
        <govuk-checkboxes-item value="@EPartyPursuedRole.ContractorsDesignAndBuildContract" checked="@Model.Roles.Contains(EPartyPursuedRole.ContractorsDesignAndBuildContract)">
            Contractor(s) - design and build contract
        </govuk-checkboxes-item>
        <govuk-checkboxes-item value="@EPartyPursuedRole.ContractorsOtherContractualArrangementArchitectsOrDesigners" checked="@Model.Roles.Contains(EPartyPursuedRole.ContractorsOtherContractualArrangementArchitectsOrDesigners)">
            Contractor(s) - other contractual arrangement / Architect(s) or designer(s)
        </govuk-checkboxes-item>
        <govuk-checkboxes-item value="@EPartyPursuedRole.WarrantyProviders" checked="@Model.Roles.Contains(EPartyPursuedRole.WarrantyProviders)">
            Warranty provider(s)
        </govuk-checkboxes-item>
        <govuk-checkboxes-item value="@EPartyPursuedRole.ConstructionProductManufacturers" checked="@Model.Roles.Contains(EPartyPursuedRole.ConstructionProductManufacturers)">
            Construction product manufacturer(s)
        </govuk-checkboxes-item>
        <govuk-checkboxes-item value="@EPartyPursuedRole.Other" checked="@Model.Roles.Contains(EPartyPursuedRole.Other)">
            Other - companies that do not fit into these categories
        </govuk-checkboxes-item>
        <govuk-checkboxes-item value="@EPartyPursuedRole.DontKnow" checked="@Model.Roles.Contains(EPartyPursuedRole.DontKnow)">
            Don't know
        </govuk-checkboxes-item>
    </govuk-checkboxes>
    
    <input asp-for="VisitedCheckYourAnswers" type="hidden" value="@Model.VisitedCheckYourAnswers" />

    <div class="comp-btn-group">
        <govuk-button name="SubmitAction" value="@ESubmitAction.Continue">Save and continue</govuk-button>
        <govuk-button name="SubmitAction" value="@ESubmitAction.Exit" class="govuk-button--secondary">Save and return later</govuk-button>
    </div>
</form>