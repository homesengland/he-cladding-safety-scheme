@using HE.Remediation.Core.Enums
@model HE.Remediation.WebApp.ViewModels.Application.ManageProgrammeAboutViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <govuk-back-link href="@Url.Action("Index")">Back</govuk-back-link>

        <main class="govuk-main-wrapper">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                   
                    <span class="govuk-caption-xl">Manage programme</span> <br />

                    <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">Updating multiple applications</h1>

                    <p class="govuk-body">
                        The responses given for the following questions will update all of the applications selected on the previous page.
                    </p>

                    <p class="govuk-body">
                        All responses are optional, and if left blank will not be updated for the selected applications.
                    </p>

                    <form asp-area="Application" asp-controller="ManageProgramme" asp-action="AboutContinue" method="post">
                        @foreach (var id in Model.ApplicationIds)
                        {
                            <input name="AppId" type="hidden" value="@id" />
                        }
                        <govuk-button name="SubmitAction" value="Continue">Continue</govuk-button>
                    </form>

                    <a class="govuk-link" href="@Url.Action("Index")">Cancel and exit</a>
                </div>
            </div>
        </main>

    </div>
</div>

